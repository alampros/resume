{
  "name": "alampros-resume-site",
  "private": true,
  "description": "Resume site",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop -p 3000",
    "start": "yarn develop",
    "serve": "gatsby serve -p 3001",
    "test": "yarn lint && yarn typecheck",
    "typecheck": "tsc",
    "lint": "yarn lint-styles && yarn lint-scripts",
    "lint-styles": "stylelint src",
    "lint-scripts": "eslint --ext ts --ext tsx --ext js --ext jsx src",
    "tidy": "yarn lint-styles --fix && eslint --ignore-pattern '!.eslintrc.js' --fix --ext ts --ext tsx --ext js --ext jsx .eslintrc.js src"
  },
  "dependencies": {
    "@types/classnames": "^2.2.7",
    "@typescript-eslint/eslint-plugin": "^1.2.0",
    "@typescript-eslint/parser": "^1.2.0",
    "classnames": "^2.2.6",
    "eslint": "^5.13.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "gatsby": "^2.0.111",
    "gatsby-plugin-google-analytics": "^2.0.13",
    "gatsby-plugin-netlify": "^2.0.8",
    "gatsby-plugin-resolve-src": "^2.0.0",
    "gatsby-plugin-typescript": "^2.0.6",
    "gatsby-source-filesystem": "^2.0.20",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-icons": "^3.3.0",
    "stylelint": "^9.10.1",
    "stylelint-config-rational-order": "^0.0.4",
    "stylelint-config-standard": "^18.2.0",
    "typescript": "~3.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alampros/resume-site"
  },
  "bugs": {
    "url": "https://github.com/alampros/resume-site/issues"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-rational-order"
    ],
    "rules": {
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global",
            "local"
          ]
        }
      ]
    }
  }
}
